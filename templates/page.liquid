{% include 'breadcrumb' %}
<header class="page-header">
  {% if settings.enable_multilang %}
  <h2 class="lang1">{{ page.title | split: '|' | first }}</h2>
  <h2 class="lang2">{{ page.title | split: '|' | last }}</h2>
  {% else %}
  <h2>{{ page.title | split: '|' | first }}</h2>
  {% endif %}
</header>

{% comment %}
  Regular page content goes here.
{% endcomment %}

{% if settings.enable_multilang %}
<div class="rte lang1">
  <div class="template-page-article">
    {{ page.content | split: '[lang2]' | first }}
  </div>
</div>
<div class="rte lang2">
  <div class="template-page-article">
    {{ page.content | split: '[lang2]' | last }}
  </div>
</div>
{% else %}
<div class="rte">
  <div class="template-page-article">
    {{ page.content | split: '[lang2]' | first }}
  </div>
</div>
{% endif %}

<style>
 .template-page-article{
   display: flex;
   flex-direction: column;
   max-width: 960px;
   margin: 0 auto;
   font-size: 14px;
   line-height: 1.5;
 }

@media (min-width: 768px) {
   .template-page-article{
     flex-direction: row;
   }
}
  
.template-page-article img{
  align-self: center;
}
</style>